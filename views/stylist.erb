<h1><%= @stylist.name() %></h1>

<% if @stylist.clients().any?() %>
  <h3>Here are all the clients of this stylist:</h3>

  <ul>
    <% @stylist.clients().each() do |client| %>
      <li><%= client.name() %> </li>
          <button>Delete</button><% end %>
  </ul>

  <% else %>
    <p>There are no clients for this stylist!</p>
  <% end %>


<h3>Add a client to <em><%= @stylist.name() %></em> </h3>

<form action="/clients" method="post">
  <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">

  <label for="name">Name of the client:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Add client</button>
</form>

<hr>

<div class="container">
  <a href="/">Home</a>
  <a href="/stylists">View All Stylists</a>
  <a href="/stylists/new">Add New Stylist</a>
</div>
